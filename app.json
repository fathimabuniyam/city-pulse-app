{
  "expo": {
    "name": "city-pulse-app",
    "slug": "city-pulse-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/pngs/logo.png",
    "scheme": "citypulseapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF",
        "foregroundImage": "./src/assets/pngs/logo.png",
        "backgroundImage": "./src/assets/pngs/logo.png",
        "monochromeImage": "./src/assets/pngs/logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "web": {
      "output": "static",
      "favicon": "./src/assets/pngs/logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/pngs/logo-with-name.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF",
          "dark": {
            "backgroundColor": "#FFFFFF"
          }
        }
      ],
      [
        "expo-localization",
        {
          "supportedLocales": {
            "ios": ["en", "ar"],
            "android": ["en", "ar"]
          }
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "locales": {
      "ar": "./src/i18n/locales/ar.json"
    },
    "extra": {
      "supportsRTL": true
    }
  }
}
